<% include partials/header %>
<style>
    body  {
        background-image: url("./images/pati.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        
    }
    </style>

<div class="container">
        <h1>
            <%= title %>
        </h1>

        <div class="col-1 col">
            <p>
              <a href="/add" >Add Patient</a>
            </p>
          </div>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Doctor Name</th>
              <th>Patient Name</th>
              <th>Age</th>
              <th>Disease</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>

                <% for (let i = 0; i < patients.length; i++) { %>
          
                  <tr>
                    <td>
                      <%= patients[i].doctorn %>
                    </td>
                    <td>
                      <%= patients[i].patientn %>
                    </td>
                    <td>
                      <%= patients[i].age %>
                    </td>
                    <td>
                      <%= patients[i].disease %>
                    </td>
                    <td>
                        <a href="/doctor/edit/<%= patients[i]._id %>">Edit</a>
                    </td>
                    <td>
                      <a href="/doctor/delete/<%= patients[i]._id %>" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                    </td>
                </tr>

                <% } %>
            </tbody>
          </table>
<% include partials/footer %>