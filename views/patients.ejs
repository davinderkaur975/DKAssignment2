<% include partials/header %>

<style>
  body  {
      background-image: url("./images/pati.jpg");
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      
  }
  </style>

<div class="container">
        <h1>
            <%= title %>
        </h1>

        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Doctor Name</th>
              <th>Patient Name</th>
              <th>Age</th>
              <th>Disease</th>
            </tr>
          </thead>
          <tbody>

                <% for (let i = 0; i < patients.length; i++) { %>
          
                  <tr>
                    <td>
                      <%= patients[i].doctorn %>
                    </td>
                    <td>
                      <%= patients[i].patientn %>
                    </td>
                    <td>
                      <%= patients[i].age %>
                    </td>
                    <td>
                      <%= patients[i].disease %>
                    </td>
                </tr>

                <% } %>
            </tbody>
          </table>
<% include partials/footer %>